#!/usr/bin/env bash

# Script to set up a new 404 error page for Nginx

print_error_and_exit() {
    echo "Error: $1" >&2
    exit 1
}

if [ "$(id -u)" -ne 0 ]; then
    print_error_and_exit "This script must be run as root."
fi

apt-get update || print_error_and_exit "Failed to update package lists."

apt-get install -y nginx || print_error_and_exit "Failed to install Nginx."

echo "Hello World!" > /var/www/html/index.html || print_error_and_exit "Failed to create the index file."

echo "Ceci n'est pas une page" > /var/www/html/404.html || print_error_and_exit "Failed to create the 404 error page."

server_config=$(cat <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
EOF
)

echo "$server_config" > /etc/nginx/sites-available/default || print_error_and_exit "Failed to write the Nginx server configuration."

ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/ || print_error_and_exit "Failed to enable the default site."

systemctl restart nginx || print_error_and_exit "Failed to restart the Nginx service."

echo "The new 404 error page has been set up successfully."
